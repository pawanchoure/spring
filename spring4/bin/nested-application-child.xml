<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	 http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
	 http://www.springframework.org/schema/context
	 http://www.springframework.org/schema/context/spring-context-4.1.xsd">

	<bean id="target1" class="com.pawanchoure.injection.applicationcontext.nesting.SimpleTarget">
		<property name="val">
			<ref bean="injectBeanParent" />
		</property>
	</bean>
	<bean id="target2" class="com.pawanchoure.injection.applicationcontext.nesting.SimpleTarget">
		<property name="val">
			<ref bean="injectBean" />
		</property>
	</bean>
	<bean id="target3" class="com.pawanchoure.injection.applicationcontext.nesting.SimpleTarget">
		<property name="val">
			<ref parent="injectBean" />
		</property>
	</bean>
	<bean id="injectBean" class="java.lang.String">
		<constructor-arg>
			<value>Bean In Child</value>
		</constructor-arg>
	</bean>
</beans>